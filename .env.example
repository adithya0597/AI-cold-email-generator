# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development

# LLM Provider Configuration
# Choose one or multiple providers
LLM_PROVIDER=openai  # Options: openai, anthropic, local

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo  # or gpt-3.5-turbo for lower cost

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229


# Email Tracking Configuration
TRACKING_BASE_URL=http://localhost:8000/api/track
EMAIL_TRACKING_ENABLED=true

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration (for production)
# DATABASE_URL=postgresql://user:password@localhost/dbname
# REDIS_URL=redis://localhost:6379/0

# Web Scraping Configuration
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, standard

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # seconds

# Feature Flags
ENABLE_CUSTOM_STYLES=true
ENABLE_RESUME_PARSING=true
ENABLE_MULTI_PAGE_SCRAPING=false

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# MIXPANEL_TOKEN=your_mixpanel_token_here